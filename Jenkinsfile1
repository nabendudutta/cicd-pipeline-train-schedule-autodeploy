pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                echo 'Running build automation'
                sh 'npm install'
            }
        }
        stage('docker Build') {
            steps { 
                sh "docker build -t nabendu89/train-schedule ."
            }
        }
        stage('docker push') {
            steps { 
                withCredentials([string(credentialsId: 'docker_hub_login', variable: 'DOCKER_HUB')]) {
                 sh "docker login -u nabendu89 -p ${DOCKER_HUB}"
                 }
              sh "docker push nabendu89/train-schedule"
             /* sh "docker run -d -p 8082:8082 --name=train-schedule  nabendu89/train-schedule" */
            }
        }
        stage('deploy in K8 cluster') {
            steps { 
                sh "kubectl apply -f train-schedule-kube.yml"
            }
        }
        
    }
